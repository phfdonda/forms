<%= form_for @user do |f| %>
<% form_authenticity_token %>
<div>
<%= f.label :username, 'Your name:' %>
<%= f.text_field :username %>
</div>
<div>
<%= f.label :email, 'Your email:' %>
<%= f.text_field :email %>
</div>
<div>
<%= f.label :password, 'Your password:' %>
<%= f.password_field :password %>
</div>
<%= submit_tag %>
<% byebug %>
<% end %>